<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>{{file}}</small>
            <small>Data de Criação: {{date}}</small><br>
            <img src="photos/{{file}}" width="530" height="420" alt="Cat Picture" />

    <div class="button-holder">
        <form action="./bom" method="post">
            <input type="hidden" name="photo" value="{{file}}" />
            <input type="submit" value="Bom!" />
        </form>
        <form action="./notcute" method="post">
            <input type="hidden" name="photo" value="{{file}}" />
            <input type="submit" value="Ruim!" />
        </form>
    </div>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-4">Editar Categoria</button></a>
            <form action="/admin/categorias/deletar/{{_id}}" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar</button>
            </form>
        </div>
    </div>

{{else}}

{{/each}}

